<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserEditActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Nuevo nombre de usuario"
        android:textAlignment="center"
        android:textColor="@color/app_blue"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_edit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_edittext_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Nombre"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_edit_user_name"
        android:text="Nuevo correo electrónico"
        android:textAlignment="center"
        android:textColor="@color/app_blue"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_edit_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_edittext_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Correo electrónico"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_edit_user_email"
        android:text="Nueva contraseña"
        android:textAlignment="center"
        android:textColor="@color/app_blue"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_edit_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_edittext_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Contraseña"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_edit_user_password"
        android:text="Confirmar nueva contraseña"
        android:textAlignment="center"
        android:textColor="@color/app_blue"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/et_edit_user_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password_confirm"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_edittext_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Confirmar contraseña"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_user_update"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/et_edit_user_password_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/app_blue"
        android:gravity="center"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_user_cancel"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_user_update"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#666"
        android:gravity="center"
        android:text="Cancelar"
        android:textColor="@color/white"
        android:textSize="20sp" />



</RelativeLayout>